\usepackage{indentfirst} % Indent first paragraphs

\usepackage{titlesec} % Allows customization of titles
\titleformat{\section}
            {\titlerule\vspace{.3ex}\normalfont\bfseries}
            {\thesection.}{.5em}{}[\titlerule\vspace{.8ex}]
